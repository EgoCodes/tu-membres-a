<%-include('partials/_header');-%>

<div class="container">
    <div class="row mt-3">
        <div class="col-12">
            <table class="table table-hover">
                <thead>
                    <tr class="table-active">
                    <th scope="col">NÂ°</th>
                    <th scope="col">EMPRESA</th>
                    <th scope="col">MEMBRESIA</th>
                    <th scope="col">PRECIO</th>
                    <th scope="col">TIEMPO RESTANTE</th>
                    <th scope="col">OPCIONES</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (data.length > 0) { %>
                        <% for (var i = 0; i < data.length; i++) { %>
                            <tr class="">
                                <th scope="col"><%= i+1 %></th>
                                <th scope="col"><%= data[i].nombreEmpresa %></th>
                                <th scope="col"><%= data[i].nombreMembresia %></th>
                                <th scope="col">$<%= data[i].precio %></th>
                                <th scope="col" id="contador<%= i+1 %>"></th>
                                <th scope="col">
                                    <div class="row row-cols-lg-auto g-3 align-items-center">
                                        <a href="/personas/comprar/update/<%= data[i].id %>&<%= data[i].idPersona %>&<%= data[i].duracion %>" class="btn btn-info ml-2">RENOVAR</i></a>
                                        <a href="/personas/comprar/delete/<%= data[i].id %>&<%= data[i].idPersona %>" class="btn btn-warning ml-2">Cancelar</i></a>
                                    </div>
                                </th>
                                <input type="hidden" id="fecha<%= i+1 %>" value="<%= data[i].fechaFinMembresia %>">
                                <% if (data.length == (1+i)) { %>
                                    <input type="hidden" id="con" value="<%= data.length %>">
                                <% } %>
                            </tr>
                        <% } %>
                    <% } else {%>
                        
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%-include('partials/_footer');-%>