<%-include('partials/_header');-%>

    <div class="container">
        <div class="row mt-3">
            <div class="col-12 mb-2">
                <div class="card">
                    <div class="card-body">
                        <form action="/empresas/membresias/add" method="POST">
                            <div class="form-group">
                                <p>REGISTRAR MEMBRESIA</p>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="nombreMembresia"
                                    placeholder="Nombre de la membresia" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="tipo" placeholder="Tipo de membresia"
                                    required>
                            </div>
                            <div class="form-group">
                                <input type="number" class="form-control" name="duracion"
                                    placeholder="Duración de la membresia en dias" required>
                            </div>
                            <div class="form-group">
                                <input type="number" class="form-control" name="precio"
                                    placeholder="Precio de la membresia" required>
                            </div>
                            <div class="form-group">
                                <input type="hidden" class="form-control" name="idEmpresa" value="<%= id %>">
                            </div>
                            <button type="submit" class="btn btn-block btn-primary">Registrar nueva membresia</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-2">
            <% if (data) { %>
                <% for ( var i=0; i < data.length; i++) {%>
                    <div class="col-lg-4 col-md-6 col-sm-6">
                        <div class="card mb-4">
                            <div class="card-body">
                                <p>Nombre: <%= data[i].nombreMembresia %>
                                </p>

                                <p><strong>Tipo:</strong>
                                    <%= data[i].tipo %>
                                </p>

                                <p><strong>Duración:</strong>
                                    <%= data[i].duracion %> Dias
                                </p>

                                <p><strong>Precio:</strong> $<%= data[i].precio %>
                                </p>
                                <button type="button" class="btn btn-primary" id="ssd" idE="<%= data[i].id %>" data-bs-toggle="modal"
                                    data-bs-target="#clientesModal">CLIENTES</button>
                                <!-- <a href="/membresias/listado/<%= data[i].id %>&<%= data[i].idEmpresa %>"
                                    class="btn btn-primary">Clientes</a> -->
                                <a href="/membresias/update/<%= data[i].id %>&<%= data[i].idEmpresa %>"
                                    class="btn btn-info pl-2 pr-2 pb-1"><i
                                        class="large material-icons">create</i></a>
                                <a href="/membresias/delete/<%= data[i].id %>&<%= data[i].idEmpresa %>"
                                    class=" btn btn-warning pl-2 pr-2 pb-1"><i
                                        class="large material-icons">clear</i></a>
                                

                            </div>
                        </div>
                    </div>
                <% } %>
            <% } %>
        </div>
    </div>

    <div class="modal fade" id="clientesModal" tabindex="-1" aria-labelledby="clientesLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <strong>
                        <p class="modal-title" id="clientesLabel">CLIENTES QUE HAN COMPRADO LA MEMBRESIA</p>
                    </strong>
                    <button type="button" class="btn p-0" data-bs-dismiss="modal"><i
                            class="large material-icons pl-2 pr-2 pb-1">close</i></button>
                </div>
                <div class="modal-body">
                    
                </div>
            </div>
        </div>
    </div>

    <%-include('partials/_footer');-%>