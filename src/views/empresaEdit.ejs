<%-include('partials/_header');-%>

<div class="container">
    <div class="row mt-5">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <form action="/empresas/update/<%= data.id %>" method="POST">
                        <div class="form-group">
                            <p>ACTUALIZAR EMPRESAS</p>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="nombreEmpresa" value="<%= data.nombreEmpresa %>" placeholder="Nombre de la empresa" required>
                        </div>
                        <button type="submit" class="btn btn-block btn-primary">ACTUALIZAR</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
</div>
<%-include('partials/_footer');-%>
